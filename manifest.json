{
  "manifest_version": 3,
  "name": "LeetStar",
  "version": "2.0",
  "description": "Summarizes LeetCode problems, suggests data structures, and recommends easier practice problems.",
  "permissions": ["activeTab", "clipboardWrite", "storage"],
  "host_permissions": [
    "https://leetcode.com/*",
    "http://localhost:5000/*",
    "https://leetstar-hgdxhjf9cvd9dze7.eastus2-01.azurewebsites.net/*"
  ],
  "content_scripts": [{
    "matches": ["https://leetcode.com/problems/*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }]
}
